cpdeploy() {
    RFCNO=$1
    URL=$2
    echo -n "sudo do_autodeploy -rfc $RFCNO -db bnrtest -dev aluc -url $URL
sudo do_autodeploy -rfc $RFCNO -db bnrprod -dev aluc -url $URL" | pbcopy
    pbpaste
}

findsvn() {
    rg --color always -i $1 ~/repos/svn
}

rmtrailws() {
    gsed -i 's/[[:space:]]*$//' $1
}

know() {
    for query in "$@"; do
        open "https://nd.service-now.com/\$knowledge.do?query=$query&sysparm_order=relevancy"
    done
}

snow() {
    for query in "$@"; do
        open "https://nd.service-now.com/text_search_exact_match.do?sysparm_search=$query"
    done
}

winpath() {
    echo "$1" | sed 's/\//\\/g' | pbcopy
    pbpaste
}

query_spriden() {
    echo "select * from spriden where lower(spriden_first_name) like lower('%$1%') and lower(spriden_last_name) like lower('%$2%');" | pbcopy
    pbpaste
}

f_get_pidm_from_ndid() {
    echo "select ndgeadmin.general_common.f_get_pidm_from_ndid('$1') from dual;" | pbcopy
    pbpaste
}
